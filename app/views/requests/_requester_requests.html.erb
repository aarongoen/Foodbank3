<br>
<% if @requests.empty? %>
  <h3> You don't have any requests yet. </h3>
<% else %>
<p>Here are your current requests:</p><br>
    <% @requests.each do |r| %>
    <% #binding.pry %>
<strong><%= r.name %></strong>:   
            <%= r.quantity %> 
            <%= r.measurement.pluralize %> 
            <% if r.fulfilled %> 
                   <ol> fullfilled</ol>
            <% else %>
                    not-fulfilled
                <%= link_to 'Edit', edit_requester_request_path(current_requester, r) %>
                <%= button_to 'Delete', [current_requester, r], method: :delete, confirm: "Are you sure?" %></ul>
            <% end %>
    <% end %>
<% end %>